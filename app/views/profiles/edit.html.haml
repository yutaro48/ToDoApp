.container
  %h2.form_title Edit Board
  = form_with(model: @profile, url: profile_path, method: 'put', local: 'true') do |f|
    %div
      = f.label :nickname, 'Name'  
    %div
      = f.text_field :nickname, class: 'text'
    - if @profile.errors.include?(:name)
      %p.error=@profile.errors.full_messages_for(:name).first
    %div
      = f.submit :Submit, class: 'btn-primary' 